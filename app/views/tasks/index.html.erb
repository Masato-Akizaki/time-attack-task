<% provide(:title, 'All tasks')%>
<h1>Tasks index</h1>
<%= link_to 'New Task', new_task_path %>

<div class="container">
  <table>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>detali</th>
    </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.name %></td>
      <td><%= task.detail %></td>
      <td><%= link_to 'show', task %>
      <td><%= link_to 'edit', edit_task_path(task) %>
    </tr>
  <% end %>
</div>