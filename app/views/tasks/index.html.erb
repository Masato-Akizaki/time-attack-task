<% provide(:title, 'All tasks')%>
<h1>Tasks index</h1>
<%= link_to 'New Task', new_task_path %>

<div class="container">
  <% @tasks.each do |task| %>
    <div class="card <%= "done" if task.status == 1%>">
      <p class="task-name"><%= link_to(task.name, edit_task_path(task))  %></p>
      <% if false %>
        <% if task.memo.present? %>
          <%= simple_format(task.memo, class: "task-memo") %>
        <% end %>
        <% if task.date.present? %>
          <p class="task-date"><%= task.date %></p>
        <% end %>
        <% if task.time.present? %>
          <p class="task-time"><%= task.time %>min</p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>