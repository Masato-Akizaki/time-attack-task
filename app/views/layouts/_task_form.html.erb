<%= form_for (task) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="area">
    <%= f.label :memo %>
    <%= f.text_area :memo, class: 'form-control' %>
  </div>
  
  <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>