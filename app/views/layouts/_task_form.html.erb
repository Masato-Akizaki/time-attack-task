<%= form_for (task) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :time %>
    <%= f.number_field :time, class: 'form-control' %>
  </div>
  <div class="area">
    <%= f.label :memo %>
    <%= f.text_area :memo, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.check_box :status, {class: 'form-control'}, 1, 0 %>
  </div>
  <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>